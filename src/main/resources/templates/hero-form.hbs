{{#partial "content"}}
    <section class="landing-pg">
        <div class="land-left"></div>
        <div class="land-right"></div>
        <form class="form" action="/new/hero" method="post">
            <h1>Create Your Hero</h1>
            <div class="form-group">
                <input type="text" placeholder="Hero's name" name="name" required class="form-control">
            </div>
            <div class="form-group">
                <input type="number" placeholder="Hero's age" name="age" required class="form-control">

            </div>
            <div class="form-group">
                <input type="text" placeholder="Hero's special powers" name="power" required class="form-control">

            </div>
            <div class="form-group">
                <input type="text" placeholder="Hero's weakness" name="weakness" required class="form-control">

            </div>

            <input class="btns" type="submit">
        </form>
    </section>
{{/partial}}
{{> layout.hbs}}